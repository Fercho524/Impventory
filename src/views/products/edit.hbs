<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/products/edit/{{producto.id}}" method="POST">

                        <div class="form-group">
                            <input type="text" value="{{producto.nombre}}" name="nombre" class="form-control"
                                placeholder="Nombre" autofocus>
                        </div>

                        <div class="form-group">
                            <input type="text" value="{{producto.descripcion}}" name="descripcion" class="form-control"
                                placeholder="Descripcion">
                        </div>

                        <div class="form-group">
                            <input type="number" value="{{producto.precioCompra}}" name="precioCompra"
                                class="form-control" placeholder="precioCompra">
                        </div>

                        <div class="form-group">
                            <input type="number" value="{{producto.precioVenta}}" name="precioVenta" class="form-control"
                                placeholder="precio de venta">
                        </div>

                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>